<Window x:Class="CS_lab5.UI.Notifications.NotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CS_lab5.UI.Notifications"
        xmlns:Converters="clr-namespace:CS_lab5.UI.Notifications"
        mc:Ignorable="d"
        Title="{Binding Path=Title}" Height="150" Width="300">
    
    <Window.Resources>
        <Converters:NotificationResoursesConverter x:Key="my:NotificationResoursesConverter" />
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0"
                    Orientation="Horizontal" HorizontalAlignment="Center">
            <Image Width="65" Height="66"
                    Source="{Binding Path=Type, 
                             Converter={StaticResource my:NotificationResoursesConverter}}">
            </Image>
        </StackPanel>
        <StackPanel Grid.Column="1" 
                    Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock Text="{Binding Path=Message}"> </TextBlock>
        </StackPanel>
        
    </Grid>
</Window>
